<h1>Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dateinit</th>
      <th>#Concerts</th>
      <th>#Integrantes</th>
      <th>#Hombres</th>
      <th>#Mujeres</th>
      <th>#Asistentes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.dateinit %></td>
        <td align="center"><%= band.concerts.count %></td>
        <td align="center"><%= band.crews.count %></td>
        <td align="center"><%= band.crews.count %></td>
        <td align="center"><%= band.crews.count %></td>
        <td align="center"><%= band.sum_attendance %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Agregar Crew', new_crew_path %></td>
        <td><%= link_to 'Ver Crew', new_crew_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

